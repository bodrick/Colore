{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build",
        "command": "dotnet",
        "type": "process",
        "args": [
          "build",
          "${workspaceFolder}/src/Colore/Colore.csproj",
          "/property:GenerateFullPaths=true",
          "/consoleloggerparameters:NoSummary"
        ],
        "problemMatcher": "$msCompile"
      },
      {
        "label": "publish",
        "command": "dotnet",
        "type": "process",
        "args": [
          "publish",
          "${workspaceFolder}/src/Colore/Colore.csproj",
          "/property:GenerateFullPaths=true",
          "/consoleloggerparameters:NoSummary"
        ],
        "problemMatcher": "$msCompile"
      },
      {
        "label": "watch",
        "command": "dotnet",
        "type": "process",
        "args": [
          "watch",
          "run",
          "${workspaceFolder}/src/Colore/Colore.csproj",
          "/property:GenerateFullPaths=true",
          "/consoleloggerparameters:NoSummary"
        ],
        "problemMatcher": "$msCompile"
      },
      {
        "type": "cake",
        "script": "Build",
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": [],
        "label": "Cake: Run Build"
      },
      {
        "type": "cake",
        "script": "Test",
        "group": {
          "kind": "test",
          "isDefault": true
        },
        "problemMatcher": [],
        "label": "Cake: Run Test"
      },
      {
        "type": "cake",
        "script": "Default",
        "group": "build",
        "problemMatcher": [],
        "label": "Cake: Run Default"
      }
    ]
}
